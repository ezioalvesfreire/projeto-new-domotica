<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <title>Posts</title>
    <!--mudar para sensor temperatura-->
    <%- include('../../imports'); -%>
</head>

<body>
    <%- include('../../navbar'); -%>

        <div class="container">
            <div class="row">
                <h2>Gerenciamento de dispositivos controlador de temperatura</2>
            </div>

            <div class="row mb-2">
                <a href="/admin/posts/create" class="btn btn-success">NOVO DISPOSITIVO</a>
            </div>

            <div class="row">

                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Código</th>
                            <th scope="col">Título</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% posts.forEach((post) => { %>
                            <tr>
                                <td>
                                    <%= post.id %>
                                </td>
                                <td>
                                    <%= post.title %>
                                </td>
                            </tr>
                            <%}); %>

                    </tbody>
                </table>
            </div>

        </div>

</body>

</html>